<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg"
    android:layout_gravity="center">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp">

            <ImageView
                android:layout_marginTop="45dp"
                android:layout_gravity="center"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:id="@+id/imgKurio"
                android:src="@drawable/img_logo_kurio"
                android:layout_marginBottom="10dp"/>

            <TextView

                android:textColor="#DE363636"
                android:fontFamily="Roboto-Regular"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:layout_marginTop="23dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Curators"
                android:id="@+id/textKurator"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_gravity="center"
                android:layout_marginTop="23dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/textUsername"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:hint="Username"
                android:singleLine="true" />

            <EditText
                android:layout_gravity="center"
                android:inputType="textPassword"
                android:layout_marginTop="13dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:id="@+id/textPassword"
                android:layout_below="@+id/textUsername"
                android:hint="Password"
                android:singleLine="true" />

            <RelativeLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="#FFF44336"

                    android:textSize="12sp"
                    android:fontFamily="Roboto-Regular"
                    android:layout_marginTop="0dp"
                    android:layout_width="192dp"
                    android:layout_height="28dp"
                    android:text="Username or Password is incorrect"
                    android:id="@+id/textWarning"
                    android:layout_alignParentStart="true"/>


                <ImageView
                    android:layout_marginTop="0dp"
                    android:layout_width="17dp"
                    android:layout_height="15dp"
                    android:id="@+id/imageWarning"
                    android:src="@drawable/ic_error"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
            <Button
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:background="#FF178AB4"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="LOGIN"
                android:id="@+id/buttonLogin"
                android:layout_marginTop="23dp"
                />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>